<h2>更新您的密碼</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新密碼：" %><br />
    <% if @minimum_password_length %>
      <em>(長度最少為<%= @minimum_password_length %>碼)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-box" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "再次確認新密碼：" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-box" %>
  </div>

  <div class="actions">
    <%= f.submit "更新密碼", class: "major-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
