<div class="container-1140">
  <section class="p-6 m-auto md:w-2/5 md:p-0">
    <div>
      <h2 class="pb-6 text-3xl font-bold text-center border-b-2 md:p-2">會員登入</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-4">
          <%= render 'layouts/messages' %>
 
          <div class="field">
            <p class="mb-2 font-bold"><%= f.label :email, "Email："%></p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-border-click mb-2 w-full" %>
          </div>

          <div class="field">
            <p class="mb-2 font-bold"><%= f.label :password, "密碼：" %></p>
            <%= f.password_field :password, autocomplete: "current-password", class: "input-border-click mb-2 w-full" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-2 field">
              <%= f.check_box :remember_me %>
              <span><%= f.label :remember_me, "記住我"%></span>
            </div> 
          <% end %>

          <div class="mb-4 actions">
            <%= f.submit "登入",class: "major-btn w-full py-" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </section>

  <section class="w-3/6 rounded">
    <img src="/assets/banner.png" alt="logo" class="hidden rounded md:block">
  </section>
  
</div>

