<header class="content-bar">餐廳資料編輯</header> 
  <h1 class="my-2 text-3xl"><%= @restaurant.title %></h1>
  <button class= "major-btn css-btn"><%= link_to "新增座位 ", new_backstage_restaurant_seat_path(@restaurant)%></button>
  <div>
    <span class="seat-title">座位資訊</span>
      <table class="seat-table">
        <tr class="seat-item-title">
          <td>id</td>
          <td>類型</td>
          <td>容納人數</td>
          <td>訂金</td>
          <td>修改</td>
          <td>刪除</td>
        </tr>
        <% @seats.each do |seat| %>
          <tr class="seat-item-text">
            <td><%= link_to seat.id, backstage_seat_path(seat.id), class: "major-btn" %></td>
            <td><%= seat.kind %></td>
            <td><%= seat.capacity %></td>
            <td><%= seat.deposit %></td>
            <td><%= link_to "edit", edit_backstage_seat_path(seat.id), class: "major-btn" %></td>
            <td><%= link_to "x", backstage_seat_path(seat.id), method: "delete", data: {confirm: "sure??"}, class: "major-btn" %></td>
          </tr>
        <% end %>
      </table>
  </div>

  <button class= "major-btn css-btn"><%= link_to "管理者頁面", backstage_root_path, class: "major-btn" %></button>
  