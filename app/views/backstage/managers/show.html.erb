<h1 class="backstage-top-bar">新增餐廳</h1>
<div class="page-background">
  <h2 class="px-3">歡迎登入: <%= current_manager.name %></h2>
  <div class="flex">
    <%= link_to "+ 新增餐廳", new_backstage_manager_restaurant_path(current_manager.id), class: "major-btn css-btn" %>
  </div>
  <table class="seat-table">
    <tr class="text-lg">
      <td>餐廳名稱</td>
      <td>電話</td>
      <td>分店</td>
      <td>地址</td>
      <td>營業時間</td>
    </tr>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.title, backstage_restaurant_path(restaurant) %></td>
        <td><%= restaurant.tel %></td>
        <td><%= restaurant.branch %></td>
        <td><%= restaurant.address %></td>
        <td>
          <%= restaurant&.start_time.strftime('%H:%M') %> -  
          <%= restaurant&.end_time.strftime('%H:%M') %>
        </td>
        <td><%= link_to "編輯餐廳資訊", edit_backstage_restaurant_path(restaurant), class: "major-btn"%></td>
        <td><%= link_to "刪除", backstage_restaurant_path(restaurant), method: "delete", class: "major-btn"%></td>
      </tr>
      <div class="flex flex-row">
        <% restaurant.images.each do |image| %>
          <div class="w-60 h-44"><%= image_tag (image.url)%></div>
        <% end %>
      </div>
    <% end %> 
  </table>

<h2>所有訂單</h2>
<div>
  <table>
    <tr>
      <td>id</td>
      <td>註記</td>
    </tr>
    <% @reservations.each do |reservation| %>
    <tr data-controller="note-reservation"
        data-id="<%= reservation.id %>"
        data-noted="<%= current_manager.noted_important_reservation?(reservation) %>">
      <td><%= reservation.id %></td>
      <td>
        <button data-action="click->note-reservation#noted">
          <span data-note-reservation-target="text">good</span>
          <i class="ml-4 fa-regular fa-star" data-note-reservation-target="icon"></i>
        </button>
      </td>
    </tr>
        
    <% end %>
  </table>
</div>
