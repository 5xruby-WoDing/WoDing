<div class="mt-24">
  <h1><%= current_manager.name %></h1>
  <%= link_to "+ 新增餐廳", new_backstage_manager_restaurant_path(current_manager.id), class: "major-btn" %>

  <% @restaurants.each do |restaurant| %>
    <div>
      <%= link_to restaurant.title, backstage_restaurant_path(restaurant) %>
      <%= restaurant.tel %>
      <%= restaurant.branch %>
      <%= restaurant.address %>
      <span>
        營業時間：
        <%= restaurant&.start_time.strftime('%H:%M') %> -  
        <%= restaurant&.end_time.strftime('%H:%M') %>
      </span>
      <%= link_to "編輯餐廳資訊", edit_backstage_restaurant_path(restaurant), class: "major-btn"%>
      <%= link_to "刪除", backstage_restaurant_path(restaurant), method: "delete", class: "major-btn"%>
      <div class="flex flex-row">
        <%# <% restaurant.images.each do |image| %> %>
          <%# <div class="w-60 h-44"><%= image_tag (image.url) %></div> %>
        <%# <% end %> %>
      </div>
    </div>
  <% end %> 
</div>


<h2>所有訂單</h2>
<div>
  <table>
    <tr>
      <td>id</td>
      <td>註記</td>
    </tr>
    <% @reservations.each do |reservation| %>
    <tr data-controller="note-reservation"
        data-id="<%= reservation.id %>"
        data-noted="<%= current_manager.noted_important_reservation?(reservation) %>">
      <td><%= reservation.id %></td>
      <td>
        <button data-action="click->note-reservation#noted">
          <span data-note-reservation-target="text">good</span>
          <i class="ml-4 fa-regular fa-star" data-note-reservation-target="icon"></i>
        </button>
      </td>
    </tr>
        
    <% end %>
  </table>
</div>
      





