<section class='grid grid-cols-3 grid-rows-2 gap-4 p-6'>
  <div class='mb-auto bg-white border rounded'>
    <h2 class='py-2 text-2xl font-bold text-center border-b' data-dash-board-target='date'>
      座位
    </h2>
    <div class='p-6 text-left'>
      <div class='grid grid-cols-2'>
        <% if @seat.errors.any? %>
          <ul>
            <%= @seat.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>  
        <% end %>

        <%= form_with model: @seat, url: backstage_restaurant_seats_path(@restaurant) do |f| %>
          <div class="seat-form">
            <%= f.label "種類"%>
            <%= f.select :kind, Seat.kinds.keys%>
          </div>
          <div class="seat-form">
            <%= f.label "容納人數"%>
            <%= f.select :capacity, [[1, 1], [2, 2], [3, 3]] %>
          </div>
          <div class="seat-form">
            <%= f.label "訂金"%>
            <%= f.text_field :deposit %>
          </div>  
        <%= f.submit "新增座位", class: 'major-btn css-btn'%>
        <% end %>
      </div>
    </div>
  </div>
  <div class='col-span-2 row-span-2 py-0 mb-auto bg-white border rounded'>
    <div data-controller='display'
          data-action="update-date@window->display#setReservation"> 
      <% @seats.each do |seat| %>
          <div class='grid grid-cols-5 p-4 text-center border-b'>
           
            <div class='flex justify-center'>
              <p class='my-auto mr-3 text-2xl text-major'>
                <%= seat.capacity %>
              </p>
              <p class='my-auto text-sm'>
                <%= seat.deposit %>
              </p>
            </div>  
            <p class='my-auto text-2xl'>
              <%= seat.state %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
</section>
